<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LoginApp.MainPage">
    <Grid>
        <Image Source="background.jpg"
               Aspect="AspectFill"
               Opacity="1"
               IsVisible="True"
               Grid.RowSpan="100"
               Grid.ColumnSpan="100" />
        <BoxView Color="#40000000"
                 Grid.RowSpan="100"
                 Grid.ColumnSpan="100" />
        <ScrollView>
            <VerticalStackLayout Padding="0,40,0,0" Spacing="0">
                <Grid Padding="20,0,20,0" ColumnSpacing="0" HeightRequest="56">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Label Text="Thanh Xuân"
                           FontSize="22"
                           FontAttributes="Bold"
                           TextColor="White"
                           VerticalOptions="Center"
                           HorizontalOptions="Start"/>
                    <Image Source="settings_icon.png" WidthRequest="28" HeightRequest="28" Grid.Column="1"
                           HorizontalOptions="End" VerticalOptions="Center"/>
                </Grid>
                <!-- Nhiệt độ lớn ở giữa màn hình -->
                <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Start" Spacing="0">
                    <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
                        <Label x:Name="TemperatureLabel"
                               Text="--"
                               FontSize="96"
                               FontAttributes="Bold"
                               TextColor="White"
                               VerticalOptions="Center"/>
                        <Label Text="°C"
                               FontSize="32"
                               TextColor="White"
                               VerticalOptions="End"
                               Padding="0,0,0,18"/>
                    </StackLayout>
                    <Label Text="Quang  33°/27°"
                           FontSize="20"
                           TextColor="White"
                           HorizontalOptions="Center"/>
                    <Frame BackgroundColor="#33FFFFFF"
                           CornerRadius="18"
                           Padding="10,2"
                           HorizontalOptions="Center"
                           Margin="0,10,0,0"
                           HasShadow="False">
                        <Label Text="AQI 65"
                               FontSize="16"
                               TextColor="White"/>
                    </Frame>
                </VerticalStackLayout>
                <!-- Thông tin mực nước và độ ẩm -->
                <HorizontalStackLayout Spacing="32" HorizontalOptions="Center" Margin="0,30,0,0">
                    <VerticalStackLayout Spacing="2" HorizontalOptions="Center">
                        <Label Text="Mực nước"
                               FontSize="16"
                               TextColor="White"
                               HorizontalOptions="Center"/>
                        <Label x:Name="WaterLevelLabel"
                               Text="3.2 m"
                               FontSize="24"
                               FontAttributes="Bold"
                               TextColor="White"
                               HorizontalOptions="Center"/>
                    </VerticalStackLayout>
                    <VerticalStackLayout Spacing="2" HorizontalOptions="Center">
                        <Label Text="Độ ẩm"
                               FontSize="16"
                               TextColor="White"
                               HorizontalOptions="Center"/>
                        <Label x:Name="HumidityLabel"
                               Text="--"
                               FontSize="24"
                               FontAttributes="Bold"
                               TextColor="White"
                               HorizontalOptions="Center"/>
                    </VerticalStackLayout>
                </HorizontalStackLayout>
                <!-- Dự báo 5 ngày (giả lập dạng card) -->
                <Frame BorderColor="Gray" Padding="15" CornerRadius="10">
                    <VerticalStackLayout Spacing="10">
                        <Label Text="Điều khiển Relay" FontAttributes="Bold" FontSize="18"/>
                        <Button x:Name="RelayToggleButton"
                            Text="BẬT Relay"
                            BackgroundColor="LightGreen"
                            Clicked="RelayToggleButton_Click"/>
                    </VerticalStackLayout>
                </Frame>
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>